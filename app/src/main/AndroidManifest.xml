<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventmaster">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.events.PaymentActivity" android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tickets.SingleTicketActivity"
            android:label="@string/title_activity_single_ticket"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.events.SingleEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tickets.TicketsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.ManageProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.events.SearchEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.events.AddEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>