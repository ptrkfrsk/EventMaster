<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/advent_pro_semibold</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="android:textViewStyle">@style/TextViewTheme</item>
        <item name="editTextStyle">@style/EditTextTheme</item>
    </style>
    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/my_button_bg</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:height">40dp</item>
        <item name="android:width">150dp</item>
    </style>
    <style name="TextViewTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="EditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/my_edit_bg</item>
        <item name="android:padding">10.5dp</item>
        <item name="fontFamily">@font/advent_pro_medium</item>
    </style>
</resources>